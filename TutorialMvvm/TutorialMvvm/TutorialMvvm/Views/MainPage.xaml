<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TutorialMvvm.Views.MainPage">
  <ContentPage.Content>
    <StackLayout Spacing="10">
      <Entry x:Name="entName" VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="250" />
      <Button x:Name="btnApply" Text="Confirmar" VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="250" />
      <StackLayout Orientation="Horizontal" Padding="15, 10, 10, 10">
        <Label Text="Você digitou: " VerticalOptions="Center" HorizontalOptions="Center" />
        <Label x:Name="lblField" VerticalOptions="Center" HorizontalOptions="Center" />
      </StackLayout>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>